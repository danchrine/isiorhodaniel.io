<script>
/*
  Tools list.
  Each item:
    id: unique id
    name: display name
    slug: used to try loading simple-icons slug (optional)
    logo: optional custom path (assets/tools/xxx.png) — if present, will be used instead of CDN
    desc: short explanation (shown in dropdown)
    phase: one of 'info','scan','exploit','post','pass','osint','report'
*/
const TOOLS = [
  // Information Gathering
  { id:'nmap', name:'Nmap', slug:'nmap', desc:'Network discovery, host & port scanning, OS detection — first step in reconnaissance.', phase:'info' },
  { id:'sublist3r', name:'Sublist3r', slug:'sublist3r', desc:'Subdomain enumeration using OSINT sources and search engines.', phase:'info' },
  { id:'maltego', name:'Maltego', slug:'maltego', desc:'Graph-based link analysis tool for OSINT and visual correlation.', phase:'info' },
  { id:'spiderfoot', name:'SpiderFoot', slug:'spiderfoot', desc:'Automated OSINT collection for surface-area discovery and threat intelligence.', phase:'info' },

  // Scanning & Enumeration
  { id:'masscan', name:'Masscan', slug:'masscan', desc:'Very fast port scanner for scanning large address spaces.', phase:'scan' },
  { id:'nikto', name:'Nikto', slug:'nikto', desc:'Web server scanner that finds vulnerable software and config issues.', phase:'scan' },
  { id:'wpscan', name:'WPScan', slug:'wpscan', desc:'WordPress scanning for vulnerable plugins, themes, and users.', phase:'scan' },
  { id:'wafw00f', name:'WAFW00F', slug:'wafw00f', desc:'Detects and identifies web application firewalls protecting a target.', phase:'scan' },

  // Exploitation
  { id:'metasploit', name:'Metasploit', slug:'metasploit', desc:'Modular exploitation framework and payload delivery system.', phase:'exploit' },
  { id:'sqlmap', name:'SQLMap', slug:'sqlmap', desc:'Automates SQL injection discovery and exploitation against databases.', phase:'exploit' },
  { id:'ettercap', name:'Ettercap', slug:'ettercap', desc:'Man-in-the-middle attacks, sniffing, and traffic manipulation on LAN.', phase:'exploit' },

  // Post exploitation
  { id:'wireshark', name:'Wireshark', slug:'wireshark', desc:'Deep packet inspection and network protocol analysis for traffic forensics.', phase:'post' },
  { id:'beef', name:'BeEF', slug:'beef', desc:'Browser Exploitation Framework for client-side attack vectors and post-exploitation.', phase:'post' },

  // Password & Wireless
  { id:'hydra', name:'Hydra', slug:'hydra', desc:'Brute-force logins for many protocols (SSH, HTTP, FTP, etc.) for password auditing.', phase:'pass' },
  { id:'hashcat', name:'Hashcat', slug:'hashcat', desc:'GPU-accelerated hash cracking for password recovery and testing.', phase:'pass' },
  { id:'aircrack', name:'Aircrack-ng', slug:'aircrack-ng', desc:'Wireless packet capture and WPA/WPA2 PSK cracking tools.', phase:'pass' },

  // OSINT
  { id:'shodan', name:'Shodan', slug:'shodan', desc:'Search engine for Internet-connected devices — helpful for attack surface discovery.', phase:'osint' },
  { id:'theharvester', name:'TheHarvester', slug:'theharvester', desc:'Email and domain harvesting for early reconnaissance.', phase:'osint' },
  { id:'subfinder', name:'Subfinder', slug:'subfinder', desc:'Fast passive subdomain discovery tool.', phase:'osint' },

  // Reporting
  { id:'libreoffice', name:'LibreOffice', slug:'libreoffice', desc:'Create professional penetration test reports in DOCX/PDF formats.', phase:'report' },
  { id:'obsidian', name:'Obsidian', slug:'obsidian', desc:'Markdown-based notes and knowledge management for documenting findings.', phase:'report' }
];

// mapping phase -> container id
const PHASE_MAP = {
  info: 'phase-info',
  scan: 'phase-scan',
  exploit: 'phase-exploit',
  post: 'phase-post',
  pass: 'phase-pass',
  osint: 'phase-osint',
  report: 'phase-report'
};

// attempt to load simple-icons CDN svg (jsdelivr)
function logoUrlFromSlug(slug){
  if(!slug) return '';
  // simple-icons filenames are lowercase and hyphenated for many names
  return `https://cdn.jsdelivr.net/gh/simple-icons/simple-icons/icons/${slug}.svg`;
}

// helper to create a card
function makeCard(tool){
  const card = document.createElement('article');
  card.className = 'tool-card reveal';
  card.dataset.id = tool.id;

  // build inner HTML
  const accent = document.createElement('div'); accent.className = 'accent-bar';
  const logoDiv = document.createElement('div'); logoDiv.className = 'tool-logo';
  const img = document.createElement('img');

  // prefer user-provided local logo if available (tool.logo), else try simple-icons
  if(tool.logo){
    img.src = tool.logo;
  } else if (tool.slug) {
    img.src = logoUrlFromSlug(tool.slug);
  } else {
    img.src = '';
  }

  // error handler -> fallback to Font Awesome icon
  img.onerror = function(){
    // remove broken image
    this.remove();
    const fa = document.createElement('div');
    fa.style.fontSize='22px'; fa.style.color='var(--accentB)';
    // pick a reasonable fa icon from id or name
    let icon = 'fa-tools';
    const map = {
      'nmap':'fa-network-wired','metasploit':'fa-bug','sqlmap':'fa-database','wireshark':'fa-wifi',
      'hashcat':'fa-key','aircrack':'fa-wifi','hydra':'fa-lock','burpsuite':'fa-shield','shodan':'fa-search'
    };
    if(map[tool.id]) icon = map[tool.id];
    fa.innerHTML = `<i class="fa-solid ${icon}"></i>`;
    logoDiv.appendChild(fa);
  };

  // success handler: ensure svg displays nicely (some CDNs return inline svg; but img tags are OK)
  img.onload = function(){
    // small visual glow
    logoDiv.style.boxShadow = '0 10px 25px rgba(0,0,0,0.6)';
  };

  logoDiv.appendChild(img);

  const h = document.createElement('div'); h.className = 'tool-name'; h.textContent = tool.name;
  const sub = document.createElement('div'); sub.className = 'tool-sub'; sub.textContent = tool.id.toUpperCase(); // small meta
  const meta = document.createElement('div'); meta.className = 'tool-meta'; meta.textContent = ''; // optional

  // description dropdown
  const desc = document.createElement('div'); desc.className = 'tool-desc'; desc.innerHTML = `<strong>Why it matters:</strong> ${tool.desc}`;

  // assemble
  card.appendChild(accent);
  card.appendChild(logoDiv);
  card.appendChild(h);
  card.appendChild(sub);
  card.appendChild(meta);
  card.appendChild(desc);

  // click toggles the description
  card.addEventListener('click', (e) => {
    // allow clicking anywhere on card to toggle
    const isOpen = desc.classList.contains('open');
    // close any other open
    document.querySelectorAll('.tool-desc.open').forEach(d => d.classList.remove('open'));
    if(!isOpen) desc.classList.add('open'); // toggle
    else desc.classList.remove('open');
  });

  return card;
}

// render all tools into their phases
function renderTools(list){
  // clear existing
  Object.values(PHASE_MAP).forEach(id => {
    const el = document.getElementById(id);
    if(el) el.innerHTML='';
  });

  list.forEach(tool => {
    const containerId = PHASE_MAP[tool.phase] || 'phase-info';
    const container = document.getElementById(containerId);
    if(!container) return;
    const card = makeCard(tool);
    container.appendChild(card);
  });

  // set up intersection observer for reveal animation
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(e => {
      if(e.isIntersecting) { e.target.classList.add('show'); observer.unobserve(e.target); }
    });
  }, {threshold:0.12});
  document.querySelectorAll('.reveal').forEach(el => observer.observe(el));
}

// filter by search string
function filterTools(q){
  q = (q||'').trim().toLowerCase();
  const filtered = TOOLS.filter(t => {
    if(!q) return true;
    return (t.name + ' ' + (t.id||'') + ' ' + (t.desc||'')).toLowerCase().includes(q);
  });
  renderTools(filtered);
}

// wire search input
document.addEventListener('DOMContentLoaded', () => {
  renderTools(TOOLS);
  const search = document.getElementById('search');
  const clear = document.getElementById('clear');
  search.addEventListener('keyup', (e) => {
    if(e.key === 'Enter') filterTools(search.value);
    else filterTools(search.value);
  });
  clear.addEventListener('click', () => { search.value=''; filterTools(''); search.focus(); });
  // close open desc when clicking outside
  document.addEventListener('click', (e) => {
    if(!e.target.closest('.tool-card')) {
      document.querySelectorAll('.tool-desc.open').forEach(d => d.classList.remove('open'));
    }
  });
});
</script>
</body>
