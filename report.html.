  <div id="viewerModal" class="viewer-modal" role="dialog" aria-modal="true" aria-hidden="true">
    <div class="viewer-content" role="document">
      <div class="viewer-toolbar">
        <div style="display:flex;gap:.75rem;align-items:center;">
          <button onclick="closeViewer()" class="btn" style="background:#333;"><i class="fa-solid fa-xmark"></i></button>
          <div class="title" id="viewerTitle">Viewing report</div>
        </div>
        <div style="display:flex;gap:.5rem;align-items:center;">
          <a id="viewerOpenNew" href="#" target="_blank" rel="noopener" class="btn" style="background:#222;">
            <i class="fa-solid fa-arrow-up-right-from-square"></i> Open in new tab
          </a>
        </div>
      </div>

      <!-- iframe for document / ppt / pdf preview. For images, the image will be set as src of this iframe via a small data-url wrapper -->
      <iframe id="viewerFrame" class="viewer-frame" title="Report viewer"></iframe>
    </div>
  </div>

  <script>
    /**
     * openViewer(fileUrl, title)
     * - fileUrl: path to asset relative to this file or absolute URL (recommended: raw GitHub URL for GitHub Pages)
     * - title: string shown in viewer toolbar
     *
     * Notes:
     * - For .docx/.pptx: uses Microsoft Office Online embed (requires the file to be accessible by Microsoft; public raw URL recommended)
     * - For .pdf: loads directly in the iframe
     * - For images: opens the image in the iframe
     * - If Office embed fails or Microsoft cannot access the file, user can click "Open in new tab" (fallback)
     */
    function openViewer(fileUrl, title) {
      var modal = document.getElementById('viewerModal');
      var frame = document.getElementById('viewerFrame');
      var viewerTitle = document.getElementById('viewerTitle');
      var openNew = document.getElementById('viewerOpenNew');

      viewerTitle.textContent = title || 'Viewing report';
      openNew.href = fileUrl;
      openNew.style.display = 'inline-flex';

      // Determine extension
      var ext = (fileUrl.split('.').pop() || '').toLowerCase();

      if (ext === 'pdf') {
        // direct load PDFs
        frame.src = fileUrl;
      } else if (ext === 'doc' || ext === 'docx' || ext === 'ppt' || ext === 'pptx' || ext === 'xlsx') {
        // Use Microsoft Office Online viewer
        // NOTE: This service requires a publicly accessible URL. When using GitHub Pages, use the raw GitHub URL (raw.githubusercontent...)
        var officeViewer = 'https://view.officeapps.live.com/op/embed.aspx?src=' + encodeURIComponent(fileUrl);
        frame.src = officeViewer;
      } else if (['png','jpg','jpeg','gif','webp','svg'].includes(ext)) {
        // For images, use a simple HTML wrapper so iframe displays it cleanly
        var html = '<!doctype html><html><head><meta charset="utf-8"><meta name="viewport" content="width=device-width,initial-scale=1"></head><body style="margin:0;display:flex;align-items:center;justify-content:center;background:#111;"><img src="' + encodeURI(fileUrl) + '" style="max-width:100%;max-height:100%;object-fit:contain;" alt="image"/></body></html>';
        frame.src = 'data:text/html;charset=utf-8,' + encodeURIComponent(html);
      } else {
        // Unknown type -> attempt to open raw file in new tab (fallback)
        frame.src = fileUrl;
      }

      modal.classList.add('open');
      modal.setAttribute('aria-hidden', 'false');
    }

    function closeViewer() {
      var modal = document.getElementById('viewerModal');
      var frame = document.getElementById('viewerFrame');
      frame.src = 'about:blank';
      modal.classList.remove('open');
      modal.setAttribute('aria-hidden', 'true');
    }

    // Close modal when clicking outside viewer-content
    document.getElementById('viewerModal').addEventListener('click', function(e){
      if (e.target === this) closeViewer();
    });

    // Close on Escape
    window.addEventListener('keydown', function(e){
      if (e.key === 'Escape') closeViewer();
    });
  </script>
